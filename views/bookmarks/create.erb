  <label for="bookmark">
    Create bookmark
    <input type="text" name="bookmark" placeholder="URL" />
  </label>
  <label for="title">
    Enter title
    <input type="text" name="title" placeholder="Title" />
  </label>
  <input type="submit" value="Create Bookmark" />
</form>